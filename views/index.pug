extends layout 

block content 
    body 
        div(class="container p-3")
            h1 Online Voting Portal
            hr
            if errors 
                div(class="alert alert-danger" role="alert")
                    b An error occurred
                    | 
                    p #{errors}
            div(class="row")
                div(class="p-3 col")
                    form(method="POST",action="/voters/signin",class="form-signup")
                        div(class="border border-primary col p-3 mt-3 rounded-top")
                            h2 Sign in as Voter
                            p(class="mt-3") Username
                            input(class="form-control",type="text",name="voterUserName")
                            p(class="mt-2") Password 
                            input(class="form-control",type="text",name="voterPassword")
                            br
                            button(class="mt-3 btn btn-primary me-2",type="submit") Sign In
                            a(class="mt-3 btn btn-info",href="/voters/signup") Sign Up
                div(class="p-3 col")
                    form(method="POST",action="/candidates/signin",class="form-signup")
                        div(class="border border-primary col p-3 mt-3 rounded-top")
                            h2 Sign in as Candidate
                            p(class="mt-3") Username
                            input(class="form-control",type="text",name="candidateUserName")
                            p(class="mt-2") Password 
                            input(class="form-control",type="text",name="candidatePassword")
                            br
                            button(class="mt-3 btn btn-primary me-2",type="submit") Sign In
                            a(class="mt-3 btn btn-info",href="/candidates/signup") Sign Up                       
        
extends layout 

block content 
    body 
        div(class="container p-3")
            h1 Online Voting Portal
            hr
            div(class="row")
                div(class="p-3 col")
                    div(class="border border-primary col p-3 mt-3 rounded-top")
                        h2 Sign in as Voter
                        p(class="mt-3") Username
                        input(class="form-control",type="text",id="voterUserName")
                        p(class="mt-2") Password 
                        input(class="form-control",type="text",id="voterPassword")
                        br
                        a(class="mt-3 btn btn-primary me-1") Sign In
                        a(class="mt-3 btn btn-info",href="/voters/signup") Sign Up
                div(class="p-3 col")
                    div(class="border border-primary col p-3 mt-3 rounded-top")
                        h2 Sign in as Candidate
                        p(class="mt-3") Username
                        input(class="form-control",type="text",id="voterUserName")
                        p(class="mt-2") Password 
                        input(class="form-control",type="text",id="voterPassword")
                        br
                        a(class="mt-3 btn btn-primary me-1") Sign In
                        a(class="mt-3 btn btn-info",href="/candidates/signup") Sign Up                       
        
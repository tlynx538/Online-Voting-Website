extends adminLayout

block content
        div(class="container p-5")
            form(method="POST",action="/admin/signin",class="form-signup")
                div(class="border border-primary col-md-3 p-3 mx-auto")
                        h2 Sign In
                        hr 
                        div(class="col p-1")
                            p(class="mt-3") Username
                            input(class="form-control",type="text",name="username")
                            p(class="mt-2") Password 
                            input(class="form-control",type="password",name="password")
                            br
                            button(class="mt-3 btn btn-primary",type="submit") Sign In

                    
            
doctype html
html
  head
    title Voting System
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='description', content='Some description')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM",crossorigin="anonymous")
    script 
      include js/form_validation.js 
    body 
        div(class="container p-3")
            h1 Sign Up as Candidate 
            hr
            form(method="POST",action="/candidates/signup",class="form-signup") 
                div(class="row p-3")
                    div(class="border col-md-6 p-3")
                        div(class="row")
                            div(class="col")
                                div(class="row")
                                    div(class="col")
                                        p First Name 
                                        input(class="form-control",type="text",name="candidate_fname")
                                    div(class="col")
                                        p Second Name 
                                        input(class="form-control",type="text",name="candidate_lname")
                                div(class="row mt-3")
                                    div(class="col")
                                        p Username 
                                        input(class="form-control",type="email",name="user_name",placeholder="example@example.com")
                                    div(class="col")
                                        p Password 
                                        input(class="form-control",type="password",name="pass_word")
                                div(class="row mt-3")
                                    div(class="col-sm-2 mt-3")
                                        p Age
                                    div(class="col-sm-3 mt-2")
                                        input(class="form-control",type="text",name="candidate_age", id="age")
                                    div(class="col-sm-2 mt-3")
                                        p Sex
                                    div(class="col-sm-3 mt-2")
                                        select(class="form-select",aria-label="Default select example",name="candidate_sex")
                                            option(value="M") Male
                                            option(value="F") Female
                                div(class="row mt-3")
                                    div(class="col-sm-2")
                                        p Choose Party
                                    div(class="col-sm-3")
                                        select(class="form-select", aria-label="Default select example",name="candidate_party_id")
                                            option(selected) 
                                                div(class="text-muted") -
                                            each item in party 
                                                option(value=item.party_id) #{item.party_name}
                                    div(class="col-sm-2 mt-2")
                                        p Area Code
                                    div(class="col-sm-4")
                                        select(class="form-select",aria-label="Default select example",name="candidate_area_code_id")
                                            option(selected) 
                                                div(class="text-muted") -
                                            each item in area
                                                option(value=item.area_code_id) #{item.area_code_name}
                        div(class="row mt-3")
                            div(class="row mt-3")
                                div(class="col")
                                    p Phone Number
                                    input(class="form-control",type="phone",name="candidate_phone")

                                    p(class="mt-3") Address
                                    textarea(class="form-control",rows="3",name="candidate_address")

                        div(class="col mt-3")
                                button(class="btn btn-primary me-2",type="submit") Sign Up
                                a(class="btn btn-warning",href="/") Return to Home    
                        
                    //- div(class="col-md-1")
                    //-     div(style="border-left:1px solid #000;height:500px")
                    div(class="col")
                            img(class="mt-5",src="/public/candidate.jpeg")
                    

